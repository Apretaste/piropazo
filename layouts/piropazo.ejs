<%
if (typeof menuicon == 'undefined') menuicon = '';
var menu = [
    {link: 'CITAS', icon: 'favorite', caption: 'Citas'},
    {link: 'PAREJAS', icon: 'people', caption: 'Parejas'},
    {link: 'FLORES', icon: 'local_florist', caption: 'Flores'},
    {link: 'PERFIL', icon: 'person', caption: 'Perfil'},
    {link: 'TIENDA', icon: 'shopping_cart', caption: 'Tienda'}];
%>

<!-- TABS -->
<% if (typeof profileIncomplete == 'undefined') var profileIncomplete = false; %>
<% if( ! profileIncomplete){ %>
<div class="row">
    <div class="col s12">
        <ul class="tabs tabs-fixed-width">
            <% menu.forEach(function(e) { %>
                <% var active = typeof title != "undefined" && title == e.caption ? 'active' : '' %>
                <% var disabled = e.caption != 'Perfil' && typeof profileIncomplete != "undefined" && profileIncomplete %>
                <li class="tab <%= disabled ? 'disabled' : '' %>">
                    <a href="#" class="green-text <%= active %>"
                    <% if(!disabled){ %>
                       onclick="apretaste.send({'command':'PIROPAZO <%= e.link %>'})"
                            <% } %>
                    >
                        <%= e.caption %>
                    </a>
                </li>
            <% }); %>
        </ul>
    </div>
</div>
<% } %>

<!-- CONTENT -->
<div class="row">
    {{APP_TEMPLATE_CODE}}
</div>


<!-- MENU -->
<ul id="home-menu" class="sidenav">
    <% for (var i in menu) { %>
        <li><a href="#!" onclick="apretaste.send({command:'PIROPAZO <%= menu[i].link %>', data: {}})">
                <i class="material-icons icon"><%= menu[i].icon %></i>
                <%- menu[i].caption %>
            </a>
        </li>
    <% } %>
</ul>

<div class="bottom-space"></div>

<!-- BUTTON -->
<div id="btn" class="fixed-action-btn">
    <a class="btn-floating btn-large waves-effect waves-light sidenav-trigger" href="#!" data-target="home-menu">
        <i class="material-icons">menu</i>
    </a>
</div>
