<div class="row">
		<% if(chats.length > 0) { %>
			<section>
			<ul class="collection" id="chats-list">
				<% chats.forEach(function(chat) { %>
					<li class="collection-item avatar openchat" id="<%=chat.id%>" name='<%= chat.first_name %>'>
						<a>
							<!-- PICTURE -->
							<% if(chat.picture) var src = "{{APP_IMAGE_PATH}}" + chat.picture;
							else var src = "{{APP_RESOURCES}}/images/user.jpg"; %>
							<img src="<%= src %>" alt="<%= chat.first_name %>" class="circle"/>

							<!-- FIRST NAME -->
							<h6 class="black-text name"><%= chat.first_name %></h6>
							<%if(chat.online=="1"){%>
								<i class="material-icons green-text online-icon">brightness_1</i>
							<%}%>
						</a>
						<!-- TEXT -->
						<msg>
							<%if(!chat.last_note_read && chat.last_note_user != myuserid){%>
								<b><%=chat.last_note%></b>
							<%}else{%>
								<%=chat.last_note%>
							<%}%>
						</msg>
						<span class="secondary-content">
							<small class="right black-text"><%=chat.last_sent%></small>
						</span>
					</li>
					
				<% }) %>
			</ul>
			</section>
		<% } %>
</div>

<div class="modal bottom-sheet" id="optionsModal">
	<ul class="collection">
		<li class="collection-item" onclick="viewProfile()"><div>Perfil<a class="secondary-content"><i class="material-icons piropazo-color-text">person</i></a></div></li>
		<li class="collection-item" onclick="writeModalOpen()"><div>Escribir<a class="secondary-content"><i class="material-icons piropazo-color-text">message</i></a></div></li>
		<li class="collection-item" onclick="deleteModalOpen()"><div>Borrar<a class="secondary-content"><i class="material-icons piropazo-color-text">delete</i></a></div></li>
	</ul>
</div>

<div id="writeMessageModal" class="modal bottom-sheet">
	<div class="modal-content">
		<div class="input-field">
          <textarea id="message" class="materialize-textarea" oninput="messageLengthValidate(500)"></textarea>
		  <label for="message">Escriba su mensaje</label>
		  <span class="helper-text">Restante: 500</span>
    	</div>
	</div>	
	<div class="modal-footer">
		<a href="#!" class="modal-close waves-effect waves-light btn-flat">Cerrar</a>
		<a onclick="sendMessage('PIROPAZO')" class="modal-close waves-effect waves-green btn-flat">Enviar</a>
	</div>
</div>

<div id="deleteModal" class="modal">
	<div class="modal-content">
		<p></p>
	</div>	
	<div class="modal-footer">
		<a href="#!" class="modal-close waves-effect waves-light btn-flat">Cancelar</a>
		<a onclick="deleteChat()" class="modal-close waves-effect waves-red btn-flat red-text">Eliminar</a>
	</div>
</div>